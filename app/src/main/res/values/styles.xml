<resources>

    <!-- Base application theme. -->
    <style name="Base.AsosTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="drawerArrowStyle">@style/NavDrawerToggleStyle</item>
    </style>

    <style name="NavDrawerToggleStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="ItemDescriptionLabel">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CtaButtonStyle">
        <item name="android:layout_margin">@dimen/medium_baseline_grid_unit</item>
        <item name="android:textSize">@dimen/large_text</item>

    </style>

</resources>
